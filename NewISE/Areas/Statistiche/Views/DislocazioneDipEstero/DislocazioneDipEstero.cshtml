            var V_UTENTE = "fantomas";
            //var V_UTENTE = V_UTENTE;

            $.ajax({
                type: "POST",
                url: rotta,
                data: {
                    codicesede: codicesede,
                    V_DATA: data,
                    V_UTENTE: 'fantomas'
