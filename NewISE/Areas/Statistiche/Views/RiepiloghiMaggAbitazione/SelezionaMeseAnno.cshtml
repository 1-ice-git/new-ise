<div id="dialog"></div>


<div class="row">
    <div class="col-xs-12">
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading"><b>Riepilogo delle Operazioni Effettuate - Maggiorazione Abitazione</b></div>
                <div class="panel-body">

                    <div class="col-xs-4 date">
                        <div class="input-group input-append date">
                            @Html.DropDownList("mesiAnniElaborati", ViewData["ElencoMesiAnniElaborati"] as IEnumerable<SelectListItem>, new { @id = "mesiAnniElaborati", @class = "form-control select2 select2-select js-data-example-ajax" })

                        </div>
                    </div>

                    <div class="col-xs-4 date">
                        <div class="input-group input-append date">
                            @Html.DropDownList("mesiAnniElaborati", ViewData["ElencoMesiAnniElaborati"] as IEnumerable<SelectListItem>, new { @id = "mesiAnniElaborati1", @class = "form-control select2 select2-select js-data-example-ajax" })

                        </div>
                    </div>

                    <div class="col-xs-4 date">
                        <div class="input-group input-append date">
                            <button class="btn btn-small btn-default" id="opener">
                                <i aria-hidden="true" class="fa fa-2x fa-print"></i>

                                Stampa
                            </button>
                        </div>
                    </div>

                   

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">


    $("#mesiAnniElaborati").select2({
        placeholder: "Seleziona il mese-anno",
        allowClear: false,
        language: "it",
        width: '150',
        ajax: {
            delay: 250,
            url: "/RiepiloghiMaggAbitazione/PrelevaMesiAnniElab",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });

    $("#mesiAnniElaborati").change(function () {
        //debugger;

        if (this.value != "") {
            var valore = this.value;

        }

    });

    $("#mesiAnniElaborati1").select2({
        placeholder: "Seleziona il mese-anno",
        allowClear: false,
        language: "it",
        width: '150',
        ajax: {
            delay: 250,
            url: "/RiepiloghiMaggAbitazione/PrelevaMesiAnniElab",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });

    $("#mesiAnniElaborati1").change(function () {
        //debugger;

        if (this.value != "") {
            var valore = this.value;

        }

    });

    function ValorizzazioneIniziale() {
        //debugger;
        var valore = $("#mesiAnniElaborati").val();

    }



    $(".form-control:input").datepicker();

    var windowWidth = $(window).width();
    var windowHeight = $(window).height();


    $("#dialog").dialog({
        autoOpen: false,
        show: {
            //effect: "blind",
            //duration: 1000
        },
        hide: {
            //effect: "explode",
            //duration: 1000
        },
        close: function (event, ui) {
            $('.container').removeClass("NoOverflow");
            
        },
        height: windowHeight, width: windowWidth


    });

    $("#opener").on("click", function () {
        //debugger;

        $('.container').addClass("NoOverflow");

        $("#dialog").dialog("open");
        $("#dialog").css("background-color", "#ffffff");


        var rotta = "/Statistiche/RiepiloghiMaggAbitazione/RptRiepiloghiMaggAbitazione";

        //var data1 = $("#data1").datepicker().val()
        //var data2 = $("#data2").datepicker().val()

        var data1 = $("#mesiAnniElaborati").val();
        var data2 = $("#mesiAnniElaborati1").val();

        $.ajax({
            type: "POST",
            url: rotta,
            data: {
                dtIni: data1,
                dtFin: data2
            },
            dataType: 'html',
            beforeSend: function () {
                //debugger;
                $("#dialog").empty();

            },
            success: function (result) {
                //debugger;
                $("#dialog").html(result);


            },
            complete: function () {
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                //                $("#Centro").getNiceScroll().resize();
            },
            error: function (jqXHR, textStatus, errorThrow) {
                //debugger;
                var msg = errorThrow.err;
                AlertDialog(msg);
            }

        });

    });

  

    $("#mesiAnniElaborati").select2({
        placeholder: "Seleziona la Data Dal",
        allowClear: true,
        language: "it",
        width: '170',
        allowClear: false

    });


    $("#mesiAnniElaborati1").select2({
        placeholder: "Seleziona la Data Al",
        allowClear: true,
        language: "it",
        width: '170',
        allowClear: false

    });


</script>


