@model NewISE.Areas.Statistiche.Models.RptCostiModel

<div id="divReport" class="text-center"></div>

@{
    var errori = ViewData.ModelState;
}

@Html.AntiForgeryToken()
<div class="row">
    <div class="col-xs-12">
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:lightgrey"><h4><b>Consuntivo dei Costi</b></h4></div>
                <div class="panel-body" style="font-size:1.2em">                   
                    <div class="row">
                        <div class="col-xs-4 date">
                            <strong>Mese Inizio Elaborazione</strong>
                        </div>

                        <div class="col-xs-4 date">
                            <strong>Mese Fine Elaborazione</strong>
                        </div>
                        <div class="col-xs-4 date">
                        </div>                    
                    </div>

                    <div class="row">
                        <div class="col-xs-4 date">
                            <div class="input-group input-append date">
                                @Html.DropDownList("cbMesiAnniElaboratiDa", ViewData["listMesiAnniElaboratiDa"] as IEnumerable<SelectListItem>, new { @id = "idMesiAnniElaboratiDa", @class = "form-control select2 select2-select js-data-example-ajax" })
                            </div>
                        </div>

                        <div class="col-xs-4 date">
                            <div class="input-group input-append date">
                                @Html.DropDownList("cbMesiAnniElaboratiA", ViewData["listMesiAnniElaboratiA"] as IEnumerable<SelectListItem>, new { @id = "idMesiAnniElaboratiA", @class = "form-control select2 select2-select js-data-example-ajax" })
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <center>
                                <button class="btn btn-small btn-success" id="btStampa">
                                    <i aria-hidden="true" class="fa fa-2x fa-print"></i>
                                    Stampa
                                </button>
                            </center>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalErrorModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title alert alert-warning text-warning" id="myModalLabel">Attenzione!!!</h4>
            </div>
            <div class="modal-body alert alert-warning text-warning">
                <p id="msgModalWarning" class="text-warning">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="modal-footer">
                <button id="btProcedi" type="button" class="btn btn-warning" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $("#cbMesiAnniElaboratiDa").select2({
        placeholder: "Seleziona il mese-anno",
        allowClear: false,
        language: "it",
        width: '150',
        ajax: {
            delay: 250,
            url: "/Statistiche/Costi/PrelevaMesiAnniElab",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });

    $("#cbMesiAnniElaboratiDa").change(function () {
        //debugger;

        if (this.value != "") {
            var valore = this.value;

        }

    });

    $("#cbMesiAnniElaboratiA").select2({
        placeholder: "Seleziona il mese-anno",
        allowClear: false,
        language: "it",
        width: '150',
        ajax: {
            delay: 250,
            url: "/Statistiche/Costi/PrelevaMesiAnniElab",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });

    $("#cbMesiAnniElaboratiA").change(function () {
        //debugger;

        if (this.value != "") {
            var valore = this.value;
        }
    });

    $("#idMesiAnniElaboratiDa").select2({
        placeholder: "Seleziona mese anno Dal",
        allowClear: true,
        language: "it",
        width: '170',
        allowClear: false
    });


    $("#idMesiAnniElaboratiA").select2({
        placeholder: "Seleziona mese anno Al",
        allowClear: true,
        language: "it",
        width: '170',
        allowClear: false
    });

    var windowWidth = $(window).width();
    var windowHeight = $(window).height();

    $("#divReport").dialog({
        autoOpen: false,
        show: {
            //effect: "blind",
            //duration: 1000
        },
        hide: {
            //effect: "explode",
            //duration: 1000
        },
        close: function (event, ui) {
            $('.container').removeClass("NoOverflow");
        },
        height: windowHeight, width: windowWidth


    });

    $("#btStampa").on("click", function () {

        var form = $(this);
        if (!form.valid()) {
            DialogModalError('True');
        } else {

            //debugger;
            $('.container').addClass("NoOverflow");
            $("#divReport").dialog("open");
            $("#divReport").css("background-color", "#ffffff");
            var rotta = "/Statistiche/Costi/RptCosti";
            var meseAnnoDa = $("#idMesiAnniElaboratiDa").val();
            var meseAnnoA = $("#idMesiAnniElaboratiA").val();

            $.ajax({
                type: "POST",
                url: rotta,
                data: {
                    meseAnnoDa: meseAnnoDa,
                    meseAnnoA: meseAnnoA
                },
                dataType: 'html',
                beforeSend: function () {
                    //debugger;
                    $("#divReport").empty();

                },
                success: function (result) {
                    //debugger;
                    $("#divReport").html(result);
                },
                complete: function () {
                    //$("#divEffettoLoadAutNoDoc").hide("slow");
                    //                $("#Centro").getNiceScroll().resize();
                },
                error: function (jqXHR, textStatus, errorThrow) {
                    //debugger;
                    var msg = errorThrow.err;
                    AlertDialog(msg);

                    //DialogModalError('True');

                }
            });
        }
    });

    @foreach (var e in errori)
    {
        if (e.Value.Errors.Count > 0)
        {
            @:DialogModalError('True');
            break;
        }

    }

    function DialogModalError(err) {
        //debugger;
        if (err == 'True') {
            $('#myModalErrorModel').modal('toggle');
        }
    }

</script>

