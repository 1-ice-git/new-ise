            "sZeroRecords": "La ricerca non ha portato alcun risultato.",
            "oPaginate": {
                "sFirst": "Inizio",
                "sPrevious": "Precedente",
                "sNext": "Successivo",
                "sLast": "Fine"
            },
            "oAria": {
                "sSortAscending": ": attiva per ordinare la colonna in ordine crescente",
                "sSortDescending": ": attiva per ordinare la colonna in ordine decrescente"
            }
        }
    });
    $("#idRiduzioni").select2({
        placeholder: "Seleziona nuovo Coefficiente Indennità di Richiamo",
        allowClear: true,
        language: "it",
        width: '150'

    });

    $("#btnInsNuovoCoeffIndRichiamo").button();


    function PrelevaPVCoeffCoeffIndRichiamo() {
        //debugger;
        rotta = "/Parametri/ParamCoeffIndRichiamo/CoeffIndRichiamoLivello";

        var idRiduzioni = parseInt($("#idRiduzioni").select2('val'));
        var chk = true;

        if (isNaN(idRiduzioni)) {
            $("#divPViewParametri").empty();
            return false;
        }

        if ('@escludiAnnullati' == 'true') {
            chk = false;
        }

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idRiduzioni: idRiduzioni, escludiAnnullati: chk },
            dataType: 'html',
            beforeSend: function () {
                //debugger;
                //VerificaAutenticazione();
                //$("#DialogNewDoc").dialog("destroy");
                //$("#divEffettoLoadAutNoDoc").show("slow");
            },
            success: function (result) {
                //debugger;
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                $("#divPViewParametri").empty();
                $("#divPViewParametri").html(result);

                //RicercaDocumenti();

            },
            complete: function () {
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                //                $("#Centro").getNiceScroll().resize();
            },
            error: function (jqXHR, textStatus, errorThrow) {
                //debugger;
                var msg = errorThrow.err;
                AlertDialog(msg);
            }

        });

    }

