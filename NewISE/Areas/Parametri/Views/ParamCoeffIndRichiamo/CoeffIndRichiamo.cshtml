@model IEnumerable<NewISE.Models.DBModel.CoefficienteRichiamoModel>
@using NewISE.Areas.Parametri.Models.dtObj;

@{
    bool escludiAnnullati = (bool)ViewBag.escludiAnnullati;

}

<p>
    <a id="btnInsNuovoCoeffIndRichiamo" href="#" onclick="NuovoCoeffIndRichiamo();">Inserisci nuovo Coeff. Ind. Richiamo</a>
</p>

<p>
    <div class="form-group">
        @Html.Label("lblCoeffFasciaKm", "Seleziona nuovo Coeff. Ind. Richiamo ", new { @class = "control-label" })
        <div id="divCombo">
            <div class="select2-container select2-container--classic">
                @Html.DropDownList("idRiduzioni", ViewBag.CoeffIndRichiamo as IEnumerable<SelectListItem>, new { @class = "form-control select2 select2-select", @onchange = "PrelevaPVCoeffCoeffIndRichiamo();", @onClick = "PrelevaPVCoeffCoeffIndRichiamo();" })
            </div>
        </div>
    </div>
</p>

<table id="tbCoeffFasciaKm" class="display" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCoefIndRichiamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idRiduzioni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataInizioValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataFineValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coefficienteRichiamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coefficienteIndBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataAggiornamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.annullato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCoefIndRichiamo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idRiduzioni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataInizioValidita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataFineValidita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coefficienteRichiamo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coefficienteIndBase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataAggiornamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.annullato)
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    $('.display').DataTable({
        "language": {
            "sEmptyTable": "Nessun dato presente nella tabella",
            "sInfo": "Vista da _START_ a _END_ di _TOTAL_ elementi",
