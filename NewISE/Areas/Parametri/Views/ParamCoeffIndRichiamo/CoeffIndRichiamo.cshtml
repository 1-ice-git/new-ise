    $("#idRiduzioni").select2({
        placeholder: "Seleziona nuovo Coefficiente Indennità di Richiamo",
        allowClear: true,
        language: "it",
        width: '150'

    });

    $("#btnInsNuovoCoeffIndRichiamo").button();


    function PrelevaPVCoeffIndRichiamo() {
        //debugger;
        rotta = "/Parametri/ParamCoeffIndRichiamo/CoeffIndRichiamoLivello";

        var idRiduzioni = parseInt($("#idRiduzioni").select2('val'));
        $("#hiTipoContributo").val(idRiduzioni);

        if (isNaN(idRiduzioni)) {
            $("#divPViewParametri").empty();
            return false;
        }
               
        var chk = false;
        if ($("#escludiAnnullati").is(":checked")) {
            chk = true;
        }

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idRiduzioni: idRiduzioni, escludiAnnullati: chk },
            dataType: 'html',
            beforeSend: function () {
                //debugger;
                //VerificaAutenticazione();
                //$("#DialogNewDoc").dialog("destroy");
                //$("#divEffettoLoadAutNoDoc").show("slow");
            },
            success: function (result) {
                //debugger;
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                $("#divPViewParametri").empty();
                $("#divPViewParametri").html(result);

                //RicercaDocumenti();

            },
            complete: function () {
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                //                $("#Centro").getNiceScroll().resize();
            },
            error: function (jqXHR, textStatus, errorThrow) {
                //debugger;
                var msg = errorThrow.err;
                AlertDialog(msg);
            }

        });

    }


    function NuovoCoeffIndRichiamo() {
        //debugger;

        var rotta = "/Parametri/ParamCoeffIndRichiamo/NuovoCoeffIndRichiamo";
        var idRiduzioni = parseInt($("#idRiduzioni").select2('val'));
        var chk = false;

        if (isNaN(idRiduzioni)) {
            //$("#divPViewParametri").empty();
            AlertDialog("Selezionare un coeff. per procedere.");
            return false;
        }

        if ('@escludiAnnullati' == 'true') {
            chk = false;
        }

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idRiduzioni: idRiduzioni, escludiAnnullati: chk },
            dataType: 'html',
            beforeSend: function () {
                //debugger;
                //VerificaAutenticazione();
                //$("#DialogNewDoc").dialog("destroy");
                //$("#divEffettoLoadAutNoDoc").show("slow");
            },
            success: function (result) {
                //debugger;
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                $("#divPViewParametri").empty();
                $("#divPViewParametri").html(result);

                //RicercaDocumenti();

            },
            complete: function () {
                //$("#divEffettoLoadAutNoDoc").hide("slow");
                //                $("#Centro").getNiceScroll().resize();
            },
            error: function (jqXHR, textStatus, errorThrow) {
                //debugger;
                var msg = errorThrow.err;
                AlertDialog(msg);
            }

        });

    }

    function EliminaCoeffIndRichiamo(id) {
        //debugger;
        var rotta = "/Parametri/ParamCoeffIndRichiamo/EliminaCoeffIndRichiamo";

        var idRiduzioni = parseInt($("#idRiduzioni").select2('val'));
       

        if (isNaN(idRiduzioni)) {
            $("#divPViewParametri").empty();
            return false;
        }

        @*if ('@escludiAnnullati' == 'true') {
            chk = false;
        }*@

        var chk = false;
        if ($("#escludiAnnullati").is(":checked")) {
            chk = true;
        }

        $('#dialog-confirm').dialog({
            autoOpen: true,
            width: 400,
            buttons: [
                {
                    text: "OK",
                    click: function () {
                        $(this).dialog("close");
                        $.ajax({
                            type: "POST",
                            url: rotta,
                            data: { escludiAnnullati: chk, idRiduzioni: idRiduzioni, idCoeffIndRichiamo: id },
                            dataType: 'html',
                            beforeSend: function () {
                                //debugger;
                                //VerificaAutenticazione();
                                //$("#DialogNewDoc").dialog("destroy");
                                //$("#divEffettoLoadAutNoDoc").show("slow");

                            },
                            success: function (result) {
                                //debugger;
                                //$("#divEffettoLoadAutNoDoc").hide("slow");
                                $("#divPViewParametri").empty();
                                $("#divPViewParametri").html(result);

                                //RicercaDocumenti();

                            },
                            complete: function () {
                                //$("#divEffettoLoadAutNoDoc").hide("slow");
                                //                $("#Centro").getNiceScroll().resize();
                            },
                            error: function (jqXHR, textStatus, errorThrow) {
                                //debugger;
                                var msg = errorThrow.err;
                                AlertDialog(msg);
                            }
                        });
                    },
                    "class": "ui-button-danger"
                },
                {
                    text: "Annulla",
                    click: function () {
                        $(this).dialog("close");
                    }
                }
            ]
        });

    }

</script>
