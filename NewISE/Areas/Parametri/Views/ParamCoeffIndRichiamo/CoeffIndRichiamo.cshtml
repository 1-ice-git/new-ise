    function EliminaCoefIndRichiamo(id) {
        //debugger;
        var rotta = "/Parametri/ParamCoeffIndRichiamo/EliminaAliquoteContributive";

        var idRiduzioni = parseInt($("#idRiduzioni").select2('val'));
