        }

        if ('@escludiAnnullati' == 'true') {
            chk = false;
        }

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idUfficio: idUfficio, escludiAnnullati: chk },
            dataType: 'html',
            beforeSend: function () {
                //debugger;
                //VerificaAutenticazione();
                //$("#DialogNewDoc").dialog("destroy");
                //$("#divEffettoLoadAutNoDoc").show("slow");
            },
            success: function (result) {
