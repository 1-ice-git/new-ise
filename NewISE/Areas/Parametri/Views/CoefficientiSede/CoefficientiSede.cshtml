            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataFineValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valoreCoefficiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.annullato)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCoefficientiSede)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.idUfficio)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.dataInizioValidita)
                </td>
                <td style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.dataFineValidita)
                </td>
                <td style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.valoreCoefficiente)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.annullato)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idCoefficientiSede }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idCoefficientiSede }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idCoefficientiSede })
                </td>
            </tr>
        }
    </tbody>
</table>

