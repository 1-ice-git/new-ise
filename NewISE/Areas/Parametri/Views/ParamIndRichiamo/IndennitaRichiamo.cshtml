@model IEnumerable<NewISE.Areas.Parametri.Models.IndennitaRichiamoModel>

<p>
    <a id="btnInsNuovaIndRichiamo" href="#" onclick="NuovaIndennitaDiBase();">Inserisci Indennita di Richiamo</a>
</p>
<table id="tbIndRichiamo" class="display" cellspacing="0">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idIndennita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idIndennitaBase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataOperazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.annullato)
        </th>
        <th></th>
    </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idIndennita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idIndennitaBase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataOperazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.annullato)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idIndennita }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idIndennita }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idIndennita })
                </td>
            </tr>
        }
    </tbody>
</table>

