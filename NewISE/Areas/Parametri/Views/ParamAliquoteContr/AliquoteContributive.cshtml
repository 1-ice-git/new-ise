                    @Html.DisplayFor(modelItem => item.descrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataInizioValidita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aliquota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.annullato)
                </td>
