        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idAliqContr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataInizioValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataFineValidita)
