@model NewISE.Areas.Parametri.Models.IndennitaBaseModel
@using NewISE.Areas.Parametri.Models;
@{
    LivelloModel lm = (LivelloModel)ViewBag.Livello;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.idLivello)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-xs-2 text-right">
                <label>Livello </label>
            </div>
            <div class="col-xs-10">
                <div class="panel panel-default" >
                    <label style="padding-left:5px; padding-top:5px;"><span style="font:bold;"> @lm.DescLivello</span></label>
                </div>
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dataInizioValidita, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.dataInizioValidita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataInizioValidita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dataFineValidita, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.dataFineValidita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataFineValidita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valore, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.valore, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valore, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valoreResponsabile, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.valoreResponsabile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valoreResponsabile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-2">
                <input type="submit" value="Inserisci" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

<script type="text/javascript">
    $("input[type=submit]").button();
</script>