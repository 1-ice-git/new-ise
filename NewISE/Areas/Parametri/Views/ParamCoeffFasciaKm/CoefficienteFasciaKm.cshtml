@model IEnumerable<NewISE.Models.DBModel.CoeffFasciaKmModel>
@using NewISE.Areas.Parametri.Models.dtObj;

@{
    //bool escludiAnnullati = (bool)ViewBag.escludiAnnullati;

}


<p>
    <a id="btnInsNuovoCoeffFasciaKm" href="#" onclick="NuovoCoeffFasciakm();">Inserisci Coefficiente Fascia Km </a>
</p>

<p>
    <div class="form-group">
        @Html.Label("lblFasciaKm", "Seleziona km della fascia Km ", new { @class = "control-label" })
        <div id="divCombo">
            <div class="select2-container select2-container--classic"> </div>
        </div>
    </div>
</p>

<table id="tbCoeffFasciaKm" class="display" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCfKm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataInizioValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataFineValidita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coefficiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.annullato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCfKm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataInizioValidita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataFineValidita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coefficiente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.annullato)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idCfKm }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idCfKm }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idCfKm })
                </td>
            </tr>
        }
    </tbody>
</table>


