            @Html.DisplayFor(modelItem => item.percentuale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.annullato)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idPercentualeDisagio }) |
            @Html.ActionLink("Details", "Details", new { id=item.idPercentualeDisagio }) |
