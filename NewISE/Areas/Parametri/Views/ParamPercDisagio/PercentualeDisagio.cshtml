    function PrelevaPVPercDisagio() {
        //debugger;
        rotta = "/Parametri/ParamPercDisagio/PercentualeDisagioLivello";

        var idUfficio = parseInt($("#idUfficio").select2('val'));

        $("#hiTipoContributo").val(idUfficio);

        var chk = false;
