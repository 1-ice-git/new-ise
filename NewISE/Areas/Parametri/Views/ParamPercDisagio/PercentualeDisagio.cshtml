    function PrelevaPVPercentualeDisagio() {
        //debugger;
        rotta = "/Parametri/ParamIndennitaBase/CoefficienteSedeLivello";

        var idUfficio = parseInt($("#idUfficio").select2('val'));
        var chk = true;

