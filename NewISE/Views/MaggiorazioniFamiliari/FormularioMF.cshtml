@model NewISE.Models.DBModel.DocumentiModel
<style>
    .BordoRosso {
        border-style: double;
        border-color: red;
        border-width: 1px;
        display: inline-block;
    }
</style>

@{
    decimal idMaggiorazioniFamiliari = (decimal)ViewData["idMaggiorazioniFamiliari"];
}

<div class="form-group">
    @*@Html.Label("Visualizza Formulario Maggiorazioni familiari", new { @class = "control-label col-xs-3" })*@
    @if (Model != null && Model.idDocumenti > 0)
    {
        <div class="col-xs-1">
            <a href="@Url.RouteUrl("LeggiDocumento", new { id = Model.idDocumenti })" target="_blank"><img class="SfondoBordoImg" width="30px" height="30px" src="../../Immagini/IconeDocumenti/PDF-icon.png" title="Click per visualizzare il formulario." /></a>
        </div>
    }
    else
    {
        <div class="col-xs-1">
            <img class="SfondoBordoImg" width="30px" height="30px" src="../../Immagini/IconeDocumenti/PDF-icon-Disable.png" title="Utlizzare il pulsante per inserire il formulario." />
        </div>
    }
    <div class="col-xs-3 col-xs-offset-1">
        @if (Model != null && Model.idDocumenti > 0)
        {
            <button type="button" class="btn btn-default btn-sm" onclick="NuovoFormulario();">
                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                Sostituisci Formulario
            </button>
        }
        else
        {
            <button type="button" class="btn btn-default btn-sm" onclick="NuovoFormulario();">
                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                Inserisci Formulario
            </button>
        }
    </div>
</div>

<div class="modal fade" id="inviaFormularioMFModal" tabindex="-1" role="dialog" aria-labelledby="inviaFormularioMFModalLabel" aria-hidden="true">
    <div id="divDialogFromularioMF" class="modal-dialog" role="document">
        <div class="modal-content" style="width: 600px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title alert alert-info text-info" id="notificaModelLabel">Formulario maggiorazioni familiari</h3>
            </div>
            <div class="modal-body alert alert-info text-info" style="font-size: 1em; height: 100px; ">
                <div id="viewDocumentoFormMF">
                    <img src="~/Immagini/Loading/ajax-loader (1).gif" />
                </div>

            </div>
            <div class="modal-footer">
                <button id="btUpload" type="button" class="btn btn-info" onclick="SalvaFormularioMF();">Salva</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function NuovoFormulario() {
        //debugger;
        var rotta = "/MaggiorazioniFamiliari/NuovoFormularioMF";
        var idMaggiorazioniFamiliari = @idMaggiorazioniFamiliari;

        $.ajax({
            url: rotta,
            type: "POST", //Le info testuali saranno passate in POST
            data: { idMaggiorazioniFamiliari: idMaggiorazioniFamiliari },
            dataType: 'html',
            async: false,
            beforeSend: function () {
                //debugger;
                VerificaAutenticazione();
                //$('#inviaDocModal').modal('show');
                //Blocca();
                $('#inviaFormularioMFModal').modal('show');

            },
            success: function (result) {
                //debugger;
                $("#viewDocumentoFormMF").empty();
                $("#viewDocumentoFormMF").html(result);

            },
            error: function (error) {
                //debugger;
                //Sblocca();
                var msg = error.responseText;
                ErroreElaborazioneAjax(msg);
            }
        });
    }

    function SalvaFormularioMF() {
        //debugger;
        var datiForm = new FormData();
        var rotta = "/Documenti/InserisciFormularioMF";
        var idMaggiorazioniFamiliari = @idMaggiorazioniFamiliari;

        var file = $("#file")[0].files[0];

        if (Validazione()) {


            datiForm.append("idMaggiorazioniFamiliari", idMaggiorazioniFamiliari);
            datiForm.append("file", file);

            $.ajax({
                url: rotta,
                type: "POST", //Le info testuali saranno passate in POST
                data: datiForm, //I dati, forniti sotto forma di oggetto FormData
                dataType: 'json',
                cache: false,
                async: false,
                beforeSend: function () {
                    //debugger;
                    VerificaAutenticazione();
                    //Blocca();
                    $("#btUploadFMF").attr("disabled", "disabled");
                    $("#btUploadFMF").addClass("disabled");
                },
                processData: false, //Serve per NON far convertire l’oggetto
                //FormData in una stringa, preservando il file
                contentType: false, //Serve per NON far inserire automaticamente
                //un content type errato
                success: function (result) {
                    //debugger;
                    $('#inviaFormularioMFModal').modal('hide');

                    if (result.err != "" && result.err != undefined) {
                        ErroreElaborazioneAjax(result.err);
                    }
                    else {
                        FormularioMF();
                        InfoElaborazioneAjax(result.msg);
                        PulsantiNotificaAttivaMagFam();
                    }


                },
                complete: function () {
                    //$('#inviaFormularioMFModal').modal('hide');


                },
                error: function (error) {
                    //debugger;
                    //Sblocca();
                    $("#btUpload").removeAttr("disabled");
                    $("#btUpload").removeClass("disabled");
                    var msg = error.responseText;
                    MsgErroreJson(msg);
                }
            });
        }
        //else {
        //    DialogInfo("Prima di inviare la lettera di trasferimento è necessario compilare i campi con asterisco.");
        //}

    }

    $("#inviaFormularioMFModal").on('hide.bs.modal', function () {
        $('.modal-backdrop').hide();
    });

</script>