        $("#tabMaggiorazioneFamiliare").empty();
        $("#tabMaggiorazioneAbitazione").empty();
        $("#tabCongediPermessi").empty();
        $("#tabSospensione").empty();
        $("#tabRichiamo").empty();
        $("#tabIndennita").empty();
        $("#RiepilogoVoci").empty();
    }

    $("#Nominativo").select2({
        placeholder: "Seleziona il nominativo",
        allowClear: true,
