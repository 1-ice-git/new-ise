@using NewISE.Models.DBModel
@model NewISE.Models.DBModel.DocumentiModel


@{
    TrasferimentoModel tm = (TrasferimentoModel)ViewData["trasferimento"];
    string coan = tm.coan;
    TitoloViaggioModel tvm = (TitoloViaggioModel)ViewData["titoliViaggio"];
    decimal idTitoloViaggio = tvm.idTitoloViaggio;
}

<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("COAN", new { @class = "control-label col-xs-1" })
        <div class="col-xs-4">
            @Html.TextBox("Coan", coan, new { @class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div style="margin-top: 10px;">
        <div class="form-group">
            <div class="col-xs-3">
                <a class="btn btn-default btn-sm" id="btDownloadFormulario" href="~/FormulariMaster/Formulario_titoli_viaggio.pdf" target="_blank">
                    <i aria-hidden="true" class="fa fa-2x fa-file-pdf-o"></i>
                    Download formulario
                </a>
            </div>

            <div class="form-group">
                @*@Html.Label("Visualizza Formulario Maggiorazioni familiari", new { @class = "control-label col-xs-3" })*@
                @if (Model != null && Model.idDocumenti > 0)
                {
                    <div class="col-xs-1">
                        <a href="@Url.RouteUrl("LeggiDocumento", new {id = Model.idDocumenti})" target="_blank"><img class="SfondoBordoImg" width="30px" height="30px" src="../../Immagini/IconeDocumenti/PDF-icon.png" title="Click per visualizzare il formulario." /></a>
                    </div>
                }
                else
                {
                    <div class="col-xs-1">
                        <img class="SfondoBordoImg" width="30px" height="30px" src="../../Immagini/IconeDocumenti/PDF-icon-Disable.png" title="Utlizzare il pulsante per inserire il formulario." />
                    </div>
                }
                <div class="col-xs-3">
                    @if (tvm.personalmente)
                    {
                        if (Model != null && Model.idDocumenti > 0)
                        {
                            <button type="button" class="btn btn-default btn-sm disabled" disabled="disabled">
                                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                                Sostituisci Formulario
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-default btn-sm disabled" disabled="disabled">
                                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                                Inserisci Formulario
                            </button>
                        }
                    }
                    else
                    {
                        if (Model != null && Model.idDocumenti > 0)
                        {
                            <button type="button" class="btn btn-default btn-sm" onclick="NuovoFormulario();">
                                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                                Sostituisci Formulario
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-default btn-sm" onclick="NuovoFormulario();">
                                <i class="fa fa-2x fa-floppy-o" aria-hidden="true"></i>
                                Inserisci Formulario
                            </button>
                        }
                    }

                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="inviaFormularioTVModal" tabindex="-1" role="dialog" aria-labelledby="inviaFormularioTVModalLabel" aria-hidden="true">
    <div id="divDialogFromularioMF" class="modal-dialog" role="document">
        <div class="modal-content" style="width: 600px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title alert alert-info text-info" id="notificaModelLabel">Formulario Titoli viaggio</h3>
            </div>
            <div class="modal-body alert alert-info text-info" style="font-size: 1em; height: 100px; ">
                <div id="viewDocumentoFormTV">
                    <img src="~/Immagini/Loading/ajax-loader (1).gif" />
                </div>

            </div>
            <div class="modal-footer">
                <button id="btUpload" type="button" class="btn btn-info" onclick="SalvaFormularioTV();">Salva</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">


    function NuovoFormulario() {
        //debugger;
        var rotta = "/TitoliViaggio/NuovoFormularioTV";
        var idTitoloViaggio = @idTitoloViaggio;

        $.ajax({
            url: rotta,
            type: "POST", //Le info testuali saranno passate in POST
            data: { idTitoloViaggio: idTitoloViaggio },
            dataType: 'html',
            async: false,
            beforeSend: function () {
                //debugger;
                VerificaAutenticazione();
                //$('#inviaDocModal').modal('show');
                //Blocca();
                $('#inviaFormularioTVModal').modal('show');

            },
            success: function (result) {
                //debugger;
                $("#viewDocumentoFormTV").empty();
                $("#viewDocumentoFormTV").html(result);

            },
            error: function (error) {
                //debugger;
                //Sblocca();
                var msg = error.responseText;
                ErroreElaborazioneAjax(msg);
            }
        });
    }


    function SalvaFormularioMF() {
        //debugger;
        var datiForm = new FormData();
        var rotta = "/Documenti/InserisciFormularioTV";
        var idTitoloViaggio = @idTitoloViaggio;

        var file = $("#file")[0].files[0];

        if (Validazione()) {


            datiForm.append("idTitoloViaggio", idTitoloViaggio);
            datiForm.append("file", file);

            $.ajax({
                url: rotta,
                type: "POST", //Le info testuali saranno passate in POST
                data: datiForm, //I dati, forniti sotto forma di oggetto FormData
                dataType: 'json',
                cache: false,
                async: false,
                beforeSend: function () {
                    //debugger;
                    VerificaAutenticazione();
                    //Blocca();
                    $("#btUploadFMF").attr("disabled", "disabled");
                    $("#btUploadFMF").addClass("disabled");
                },
                processData: false, //Serve per NON far convertire l’oggetto
                //FormData in una stringa, preservando il file
                contentType: false, //Serve per NON far inserire automaticamente
                //un content type errato
                success: function (result) {
                    //debugger;
                    $('#inviaFormularioTVModal').modal('hide');

                    if (result.err != "" && result.err != undefined) {
                        ErroreElaborazioneAjax(result.err);
                    }
                    else {
                        FormularioMF();
                        InfoElaborazioneAjax(result.msg);
                        PulsantiNotificaAttivaMagFam();
                    }


                },
                complete: function () {
                    //$('#inviaFormularioMFModal').modal('hide');


                },
                error: function (error) {
                    //debugger;
                    //Sblocca();
                    $("#btUpload").removeAttr("disabled");
                    $("#btUpload").removeClass("disabled");
                    var msg = error.responseText;
                    MsgErroreJson(msg);
                }
            });
        }
        //else {
        //    DialogInfo("Prima di inviare la lettera di trasferimento è necessario compilare i campi con asterisco.");
        //}

    }

    $("#inviaFormularioMFModal").on('hide.bs.modal', function () {
        $('.modal-backdrop').hide();
    });
</script>