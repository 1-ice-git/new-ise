                ErroreElaborazioneAjax(msg);
            }
        });

    }

    function AltriDatiFamiliariFiglio(idFamiliare) {
        //debugger;
        var idTitoliViaggio = parseInt('@idTitoliViaggio');
        var rotta = "/TitoliViaggio/AltriDatiFamiliariFiglio";

        $.ajax({
