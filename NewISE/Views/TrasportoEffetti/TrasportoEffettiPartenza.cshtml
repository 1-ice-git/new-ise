                    </div>
                    <div class="col-xs-2" style="padding-top:5px">
                        <input class="form-control" style="text-align: right" value="@Html.DisplayFor(model => model.indennitaPrimaSistemazione)" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 text-right" style="padding-top:10px">
                        <label for="percKM" class="control-label">@Html.DisplayNameFor(model => model.percKM)</label>
                    </div>
                    <div class="col-xs-2" style="padding-top:5px">
                        <input class="form-control" style="text-align: right" value="@Html.DisplayFor(model => model.percKM)" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 text-right" style="padding-top:10px">
                        <label for="contributoLordo" class="control-label">@Html.DisplayNameFor(model => model.contributoLordo)</label>
                    </div>
                    <div class="col-xs-2" style="padding-top:5px">
                        <input class="form-control" style="text-align: right" value="@Html.DisplayFor(model => model.contributoLordo)" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">&nbsp;
        </div>
    </div>
    <div class="row">
        <div  class="col-xs-12">
            <div class="table" style="background-color:transparent">
                <div class="row">
                    <div class="col-xs-7">
                        <label for="modulo1" class="control-label">
                            Modulo 1 - (Richiesta Contributo Fisso Omnicomprensivo - Trasferimento)
                        </label>
                    </div>
                    <div class="col-xs-2" style="padding-left:10px;padding-bottom:10px">
                        @if (DocContributo)
                        {
                            <a href="#" onclick="ElencoDocumentiTE(@Convert.ToDecimal(@EnumTipoDoc.Contributo_Fisso_Omnicomprensivo));" id="linkElencoDocTE">
