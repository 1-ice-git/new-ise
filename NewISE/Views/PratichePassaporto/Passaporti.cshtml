                //RicercaDocumenti();

            },
            complete: function () {

            },
            error: function (jqXHR, textStatus, errorThrow) {
                //debugger;
                var msg = errorThrow.err;
                ErroreElaborazioneAjax(msg);
            }

        });

    }

    function AnnullaRichiestaPassaporto(idAttivazionePassaporto) {
        //debugger;
        var rotta = "/PratichePassaporto/AnnullaRichiesta";

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idAttivazionePassaporto: idAttivazionePassaporto },
            dataType: 'json',
            beforeSend: function () {
                //debugger;
                //VerificaAutenticazione();
                //$("#DialogNewDoc").dialog("destroy");
                //$("#divEffettoLoadAutNoDoc").show("slow");
            },
            success: function (result) {
                //debugger;
                if (result.err == "") {

                    //DisabilitaCheckBox();
                    //InfoElaborazioneAjax(result.msg);
                    ElencoFamiliariPassoporto();
                    GestionePulsantiNotificaAndConcludiPassaporto();
                    GestioneAttivitaTrasferimento();
                } else {
