@using NewISE.Models.Tools
@using NewISE.Models.DBModel
@using NewISE.Models.DBModel.Enum
@model NewISE.Models.ViewModel.GestPulsantiAttConclModel

@{
    bool admin = Utility.Amministratore();
}


@Html.Hidden("HidAttivazionePassaporto", Model.idAttivazionePassaporto)

<div class="row">
    <div class="pull-right" style="margin-top: 10px; margin-bottom: 10px;margin-right:35px ">

        @if (Model.statoTrasferimento != EnumStatoTraferimento.Attivo && Model.statoTrasferimento != EnumStatoTraferimento.Annullato)
        {
            if (Model.praticaConclusa == false)
            {
                if (Model.notificaRichiesta == false)
                {
                    if (Model.notificabile)
                    {
                        <button class="btn btn-default btn-sm " id="btNotificaInvioPassaporti" onclick="ModalNotificaInvioPassaporti(); ">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Notifica richiesta
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-default btn-sm disabled" disabled id = "btNotificaInvioPassaporti" >
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Invio richiesta
                        </button>
                    }
                    if (admin)
                    {
                        <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Attiva richiesta
                        </button>
                        <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Annulla richiesta
                        </button>
                    }
                }
                else
                {
                    <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Notifica richiesta
                    </button>

                    if (admin)
                    {
                        <button class="btn btn-default btn-sm " id="btPraticaConclusaPassaporti" onclick="ModalAttivaInvioPassaporti();">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Attiva richiesta
                        </button>
                        <button class="btn btn-default btn-sm " id="btAnnullaInvioPassaporto" onclick="ModalAnnullaInvioPassaporti(@Model.idAttivazionePassaporto);">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Annulla richiesta
                        </button>
                    }
                }


            }
            else
            {
                <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Notifica richiesta
                </button>
                if (admin)
                {
                    <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Attiva richiesta
                    </button>
                    <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Annulla richiesta
                    </button>
                }

            }

        }
        else
        {
            <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti">
                <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                Notifica richiesta
            </button>
            if (admin)
            {
                <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Attiva richiesta
                </button>
                <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Annulla richiesta
                </button>
            }

        }
    </div>
</div>



<script type = "text/javascript" >

    function ModalAnnullaInvioPassaporti(idAttivazionePassaporto)
    {
        //debugger;
        MessaggioAnnullaInvioPassaporto(idAttivazionePassaporto);
        $('#ModalAnnullaInvioPassaporti').modal().show();
    }


    function ModalNotificaInvioPassaporti()
    {
        //debugger;
        $('#ModalNotificaInvioPassaporti').modal().show();
    }


    function ModalAttivaInvioPassaporti()
    {
        //debugger;
        $('#ModalAttivaInvioPassaporti').modal().show();
    }

</script>
