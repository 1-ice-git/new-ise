@using NewISE.Models.Tools
@using NewISE.Models.DBModel
@using NewISE.Models.Enumeratori

@model NewISE.Models.ViewModel.GestPulsantiAttConclModel

@{
    bool admin = Utility.Amministratore();
}


@Html.Hidden("HidAttivazionePassaporto", Model.idAttivazionePassaporto)

<div class="row">
    <div class="pull-right" style="margin-top: 10px; margin-bottom: 10px;margin-right:35px ">

        @if (Model.statoTrasferimento != EnumStatoTraferimento.Terminato && Model.statoTrasferimento != EnumStatoTraferimento.Annullato)
        {
            if (Model.praticaConclusa == false)
            {
                if (Model.notificaRichiesta == false)
                {
                    if (Model.notificabile)
                    {
                        <button class="btn btn-default btn-sm " id="btNotificaInvioPassaporti_var" onclick="ModalNotificaInvioPassaporti_var(); ">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Notifica richiesta
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-default btn-sm disabled" disabled id = "btNotificaInvioPassaporti_var" >
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Invio richiesta
                        </button>
                    }
                    if (admin)
                    {
                        <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti_var">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Attiva richiesta
                        </button>
                        <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto_var">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Annulla richiesta
                        </button>
                    }
                }
                else
                {
                    <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti_var">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Notifica richiesta
                    </button>

                    if (admin)
                    {
                        <button class="btn btn-default btn-sm " id="btPraticaConclusaPassaporti_var" onclick="ModalAttivaInvioPassaporti_var();">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Attiva richiesta
                        </button>
                        <button class="btn btn-default btn-sm " id="btAnnullaInvioPassaporto_var" onclick="ModalAnnullaInvioPassaporti_var(@Model.idAttivazionePassaporto);">
                            <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                            Annulla richiesta
                        </button>
                    }
                }


            }
            else
            {
                <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti_var">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Notifica richiesta
                </button>
                if (admin)
                {
                    <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti_var">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Attiva richiesta
                    </button>
                    <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto_var">
                        <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                        Annulla richiesta
                    </button>
                }

            }

        }
        else
        {
            <button class="btn btn-default btn-sm disabled" disabled id="btNotificaInvioPassaporti_var">
                <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                Notifica richiesta
            </button>
            if (admin)
            {
                <button class="btn btn-default btn-sm disabled" disabled id="btPraticaConclusaPassaporti_var">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Attiva richiesta
                </button>
                <button class="btn btn-default btn-sm disabled" disabled id="btAnnullaInvioPassaporto_var">
                    <i aria-hidden="true" class="fa fa-2x fa-envelope"></i>
                    Annulla richiesta
                </button>
            }

        }
    </div>
</div>



<script type = "text/javascript" >

    function ModalAnnullaInvioPassaporti_var(idAttivazionePassaporto)
    {
        //debugger;
        MessaggioAnnullaInvioPassaporto_var(idAttivazionePassaporto);
        $('#ModalAnnullaInvioPassaporti_var').modal().show();
    }


    function ModalNotificaInvioPassaporti_var()
    {
        //debugger;
        $('#ModalNotificaInvioPassaporti_var').modal().show();
    }


    function ModalAttivaInvioPassaporti_var()
    {
        //debugger;
        $('#ModalAttivaInvioPassaporti_var').modal().show();
    }

</script>
