                        //if (rinuncia && richiesta)
                        //{
                        //    $("#btNotificaRichiestaMagFam_Var").attr("disabled", "disabled");
                        //    $("#btNotificaRichiestaMagFam_Var").addClass("disabled");

                        //    if (attivazione)
                        //    {
