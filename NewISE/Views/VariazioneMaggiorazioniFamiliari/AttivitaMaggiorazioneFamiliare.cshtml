    function PulsantiNotificaAttivaMagFam() {
        //debugger;
        var rotta = "/VariazioneMaggiorazioniFamiliari/PulsantiNotificaAttivaMagFam";
        var idMagFam = parseInt('@idMagFam');

        $.ajax({
            type: "POST",
            url: rotta,
            data: { idMaggiorazioniFamiliari: idMagFam },
            dataType: 'json',
            beforeSend: function () {
                //debugger;
                VerificaAutenticazione();
