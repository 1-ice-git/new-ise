                            $("#btNotificaRichiestaMagFam_Var").addClass("disabled");

                            if (attivazione) {
                                $("#btAttivaMagFam_Var").attr("disabled", "disabled");
                                $("#btAttivaMagFam_Var").addClass("disabled");
                            }
