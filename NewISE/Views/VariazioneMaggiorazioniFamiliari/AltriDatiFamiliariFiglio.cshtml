@model NewISE.Models.DBModel.AltriDatiFamFiglioModel

@{
    decimal idMaggiorazioniFamiliari = Convert.ToDecimal(ViewData["idMaggiorazioniFamiliari"]);
    decimal idAttivazione = Convert.ToDecimal(ViewData["idAttivazione"]);
    decimal idFigli = Convert.ToDecimal(ViewData["idFigli"]);
    bool solaLettura = Convert.ToBoolean(ViewData["solaLettura"]);
    bool trasfSolaLettura = Convert.ToBoolean(ViewData["trasfSolaLettura"]);
}

<div style="padding-left: 15px;">
    <h4>Altri Dati Familiari Figlio</h4>
    <hr />
    <table style="width:100%">
        <tr>
            <td>
                <table>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.Figli.nominativo)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.Figli.nominativo)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.dataNascita)
                        </td>
                        @if (Model.dataNascita.HasValue)
                        {
                            <td style="padding-left:10px">
                                <span class="text-uppercase">@Model.dataNascita.Value.ToShortDateString()</span>
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                    @*<tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.capNascita)
                        </td>

                        <td style="padding-left:10px">
                            @Html.DisplayFor(model => model.capNascita)
                        </td>
                    </tr>*@
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.comuneNascita)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.comuneNascita)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.provinciaNascita)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.provinciaNascita)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.nazionalita)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.nazionalita)</span>
                        </td>
                    </tr>
                </table>
            </td>
            <td>
                <table>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.indirizzoResidenza)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.indirizzoResidenza)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.capResidenza)
                        </td>
                        <td style="padding-left:10px">
                            @Html.DisplayFor(model => model.capResidenza)
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.comuneResidenza)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.comuneResidenza)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.provinciaResidenza)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.provinciaResidenza)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.residente)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.residente)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.studente)
                        </td>
                        <td style="padding-left:10px">
                            <span class="text-uppercase">@Html.DisplayFor(model => model.studente)</span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <hr />
</div>
<p style="padding-left: 15px;">
    @if (solaLettura || trasfSolaLettura)
    {
        <button class="btn btn-default disabled">Modifica</button>
    }
    else
    {
        @Ajax.ActionLink("Modifica", "ModificaAltriDatiFamiliariFiglio", "VariazioneMaggiorazioniFamiliari", new { idAltriDatiFam = Model.idAltriDatiFam, idMaggiorazioniFamiliari = idMaggiorazioniFamiliari, idAttivazione=idAttivazione }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tabFamiliari", OnFailure = "ErroreElaborazioneAjax", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-success" })
    }
    | @Ajax.ActionLink("Torna indietro", "ElencoFamiliari", "VariazioneMaggiorazioniFamiliari", new { idMaggiorazioniFamiliari = idMaggiorazioniFamiliari }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tabFamiliari", OnFailure = "ErroreElaborazioneAjax", InsertionMode = InsertionMode.Replace })
</p>

<script type="text/javascript">
    PulsantiNotificaAttivaMagFam();
</script>


