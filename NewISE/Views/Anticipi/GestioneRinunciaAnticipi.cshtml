@using NewISE.Models.DBModel
@model NewISE.Models.DBModel.RinunciaAnticipiModel

@{
    decimal idAttivitaAnticipi = Convert.ToDecimal(Model.idAttivitaAnticipi);
    bool soloLettura = Convert.ToBoolean(ViewData["soloLettura"]);
    bool rinunciaAnticipi = Convert.ToBoolean(Model.rinunciaAnticipi);
}

<div>
    <div class="row fa-border" style="background-color:white; margin-left:5px;  border:solid;border-width:thin;margin-bottom:15px;border-radius:15px;box-shadow:3px 3px 5px 2px #333333">
        <div class="col-xs-10 text-right" style="margin-top:3px;font-weight:bold;color:green">
            Rinuncia Richiesta Anticipo
        </div>
        <div class="col-xs-1">
            @if (soloLettura)
            {
                if (rinunciaAnticipi)
                {
                    <input type="checkbox" disabled checked="checked">
                }
                else
                {
                    <input type="checkbox" disabled>
                }
            }
            else
            {
                if (rinunciaAnticipi)
                {
                    <input type="checkbox" checked="checked" onclick="AggiornaRinunciaAnticipi(@idAttivitaAnticipi)">
                }
                else
                {
                    <input type="checkbox" onclick="AggiornaRinunciaAnticipi(@idAttivitaAnticipi)">
                }
            }
        </div>
    </div>
</div>


<script type="text/javascript">

</script>



