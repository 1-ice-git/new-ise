@using NewISE.Models.Tools
@model NewISE.Models.DBModel.TrasferimentoModel
<div class="row">
    <div class="col-xs-12">
        <div class="text-center">
            <H3>@Model.Dipendente.Nominativo</H3>
        </div>
    </div>
</div>
<hr />
<div class="form-group">
    <div class="col-xs-3">
        <label class="control-label">Tipo trasf.: </label>
        <label class="control-label text-uppercase text-info">@Model.TipoTrasferimento.descTipoTrasf</label>
    </div>
    <div class="col-xs-3">
        <label class="control-label">Ufficio: </label>
        <label class="control-label text-uppercase text-info">@Model.Ufficio.descUfficio (@Model.Ufficio.codiceUfficio)</label>
    </div>

    <div class="col-xs-2">
        <label class="control-label">Data ini.: </label>
        <label class="control-label text-uppercase text-info"> @Model.dataPartenza.ToShortDateString()</label>
    </div>
    <div class="col-xs-3">
        <label class="control-label">Data fine trasf.: </label>
        @if (Model.dataRientro.HasValue && Model.dataRientro.Value < Utility.DataFineStop())
        {

            <label class="control-label text-uppercase text-info">@Model.dataRientro.Value.ToShortDateString()</label>
        }
        else
        {

            <label class="control-label text-uppercase text-info">In corso...</label>
        }

    </div>
</div>

<div class="form-group">

</div>

