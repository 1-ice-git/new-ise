@model IEnumerable<NewISE.Models.ViewModel.ElencoVociManualiViewModel>


<table id="tabElencoVociManuali" cellspacing="0" class="table DimensioneFontTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nominativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ufficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.voce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meseAnnoInizio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meseAnnoFine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.importo)
            </th>

        </tr>
