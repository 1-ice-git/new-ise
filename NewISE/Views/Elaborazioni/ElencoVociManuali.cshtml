                    @Html.DisplayFor(modelItem => item.nominativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ufficio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.voce)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meseAnnoInizio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meseAnnoFine)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.importo)
                </td>

            </tr>
        }
    </tbody>
</table>


