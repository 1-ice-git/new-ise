<script src="~/Scripts/autoNumeric/autoNumeric-min.js"></script>



<div class="form-group-sm row">
    <div class="margineTop5px">
        @Html.Label("lblMatricole", "Seleziona il nominativo", new { @class = "control-label col-xs-5" })
        <div class="select2-container select2-container--classic col-xs-7">
            <select id="ddlMatricole" name="idDipendente" class="form-control select2 select2-select js-data-example-ajax"></select>
        </div>
    </div>
</div>

<div class="form-group-sm row">
    <div class="margineTop5px">
        @Html.Label("lblVoci", "Seleziona la voce", new { @class = "control-label col-xs-5" })
        <div class="select2-container select2-container--classic col-xs-7">
            <select id="ddlVoci" name="voce" class="form-control select2 select2-select js-data-example-ajax"></select>
        </div>
    </div>
</div>

<div class="form-group-sm row">
    <div class="margineTop5px">
        @Html.Label("lblImporto", "Importo", new { @class = "control-label col-xs-5" })
        <div class="col-xs-7">
            <input type="text" id="txtImporto" name="Importo" value="0" style="width: 200px;" class="form-control text-right" />
        </div>

    </div>
</div>

<div class="form-group-sm row">
    <div class="margineTop5px ">
        @Html.Label("lblDa", "Da", new { @class = "control-label col-xs-1" })
        <div class="col-xs-5">
            <input type="text" id="txtDa" value="" class="form-control col-xs-5" />
        </div>

    </div>
</div>
<div class="col-xs-6">
    <div class="form-group-sm">
        @Html.Label("lblA", "A", new { @class = "control-label col-xs-1" })
        <input type="text" id="txtA" name="Importo" value="0" class="form-control col-xs-5 text-right" />
    </div>
</div>


<script type="text/javascript">

    $('#txtImporto').autoNumeric('init',
	{
	    aSep: '.',
	    aDec: ',',
	    nSep: true
	});

    $("#ddlDa").select2({
        placeholder: "Da",
        allowClear: false,
        language: "it",
        width: '100',
        ajax: {
            delay: 250,
            url: "/Elaborazioni/PrelevaMatricole",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });


    $("#ddlMatricole").select2({
        placeholder: "Seleziona il nominativo",
        allowClear: false,
        language: "it",
        width: '200',
        ajax: {
            delay: 250,
            url: "/Elaborazioni/PrelevaMatricole",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });

    $("#ddlVoci").select2({
        placeholder: "Seleziona la voce",
        allowClear: false,
        language: "it",
        width: '200',
        ajax: {
            delay: 250,
            url: "/Elaborazioni/PrelevaVoci",
            data: function (dati) {
                //debugger;
                var query = {
                    search: dati.term,
                    type: 'public'
                }

                // Query parameters will be ?search=[term]&type=public
                return query;
            },
            dataType: 'json',
            type: "post",
            processResults: function (data) {
                //debugger;
                return {
                    results: data.results
                }
            }
        }
    });
</script>
